@model FinishBlog.Models.CreateBlogPostViewModel

@{
    ViewData["Title"] = "Yeni Blog Oluştur";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Yeni Blog Yazısı Oluştur</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="CreatePost" enctype="multipart/form-data" novalidate>
                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-semibold">Başlık <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Blog başlığını yazınız..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label fw-semibold">İçerik <span class="text-danger">*</span></label>
                            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Blog içeriğinizi buraya yazınız..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label for="ImageFile" class="form-label fw-semibold">Blog Resmi (isteğe bağlı)</label>
                            <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success btn-lg px-4">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
